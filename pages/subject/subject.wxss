.page {
  min-height: 100vh;
  background: #f5f5f5;
}

.container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
}

.card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx;
  width:100%;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  flex: 1;
  display: flex;
  flex-direction: column;
}

.card-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.card-title .icon {
  font-size: 48rpx;
  color: #4096ff;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  flex: 1;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 140rpx;
  font-size: 32rpx;
  color: #666666;
}

.picker {
  flex: 1;
  font-size: 32rpx;
  color: #333333;
}

input {
  flex: 1;
  font-size: 32rpx;
  color: #333333;
  padding: 15rpx 0;
}

.section {
  margin-top: 40rpx;
}

.section-title {
  font-size: 32rpx;
  color: #666666;
  margin-bottom: 30rpx;
}

.subject-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.subject-item {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #333333;
}

.subject-item.active {
  background: #4096ff;
  color: #ffffff;
}

.subject-item.disabled {
  background: #f0f0f0;
  color: #999999;
}

.submit-btn {
  margin-top: 60rpx;
  background: #4096ff;
  color: #ffffff;
  font-size: 36rpx;
  padding: 30rpx 0;
  border-radius: 12rpx;
  border: none;
}

.submit-btn:active {
  opacity: 0.8;
} 