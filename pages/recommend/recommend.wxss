.page {
  height: 100vh;
  background: #f5f5f5;
  display:flex;
  flex-direction:column;
  box-sizing: border-box;
}

.container {
  padding: 30rpx;
  box-sizing: border-box;
  height: calc(100vh - 88rpx - 60rpx); /* 视口高度 - 导航栏高度 - 底部客服按钮高度 */
  overflow-y: auto;
  gap:30rpx;
  display:block;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
  text-align: center;
}

.subtitle {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
  margin-bottom:20rpx;
}

.list {
  width:100%;
 height:auto;
  box-sizing: border-box;
}

.item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom:20rpx;
}

.school-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.school-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.school-type {
  font-size: 24rpx;
  color: #4096ff;
  background: #e6f7ff;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.majors {
  display: block;
  flex-direction: column;
  gap: 16rpx;
}

.major-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.major-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  flex:1;
}

.major-score {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.score-label {
  font-size: 24rpx;
  color: #999999;
  white-space: nowrap;
overflow: hidden;
}

.score-value {
  font-size: 28rpx;
  color: #4096ff;
  font-weight: bold;
  white-space: nowrap;
} 