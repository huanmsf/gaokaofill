.page {
  min-height: 100vh;
  background: #f5f5f5;
}

.filter-section {
  display: flex;
  padding: 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.filter-item {
  flex: 1;
  margin: 0 10rpx;
}

.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.picker .icon {
  font-size: 24rpx;
  color: #999;
}

.major-list {
  height: calc(100vh - 88rpx - 100rpx);
}

.major-item {
  margin: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.major-info {
  margin-bottom: 20rpx;
}

.major-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.major-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  padding: 4rpx 12rpx;
  background: #f0f7ff;
  color: #4096ff;
  border-radius: 4rpx;
  font-size: 24rpx;
}

.major-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
} 