.container {
  padding: 30px;
  background: #f8f9fa;
  height: 100vh;
}

.form-item {
  margin-bottom: 25px;
  background: white;
  border-radius: 12px;
  padding: 15px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.label {
  display: block;
  margin-bottom: 8px;
  color: #333;
  font-size: 15px;
  font-weight: 500;
}

.picker {
  width: 100%;
  height: 44px;
  line-height: 44px;
  border: 1px solid #e8e8e8;
  border-radius: 8px;
  padding: 0 12px;
  background: #fff;
  color: #333;
  font-size: 15px;
}

input {
  width: 100%;
  height: 44px;
  border: 1px solid #e8e8e8;
  border-radius: 8px;
  padding: 0 12px;
  box-sizing: border-box;
  font-size: 15px;
  color: #333;
}

.submit-btn {
  margin-top: 40px;
  width: 100%;
  height: 48px;
  line-height: 48px;
  background: #1890ff;
  color: white;
  border-radius: 24px;
  font-size: 16px;
  font-weight: 500;
  box-shadow: 0 4px 12px rgba(24, 144, 255, 0.2);
}

.submit-btn:active {
  background: #096dd9;
  transform: translateY(1px);
} 