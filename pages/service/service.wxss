.page {
  height: 100vh;
  background: #f5f5f5;
  box-sizing: border-box;
  display: flex;
  box-sizing:border-box;
  flex-direction: column;
}

.container {
  margin-top:20rpx;
  height: calc(100vh - 180rpx);
  display: flex;
  flex-direction: column;
  padding: 0;
}

.chat-container {
  flex: 1;
  padding: 0 40rpx;
}

.message-list {
  padding-bottom: 40rpx;
}

.message {
  display: flex;
  align-items: flex-start;
  margin-bottom: 40rpx;
}

.message.user {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin: 0 20rpx;
}

.content {
  max-width: 70%;
  padding: 24rpx 32rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  line-height: 1.4;
}

.service .content {
  background: #fff;
  color: #333;
}

.user .content {
  background: #ff6b35;
  color: #fff;
}

.input-container {
  width:100%;
  box-sizing:border-box;
  padding: 20rpx 40rpx;
  margin-bottom:40rpx;
  background: #fff;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #eee;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.message-input {
  flex: 1;
  height: 80rpx;
  background: #f8f8f8;
  border-radius: 40rpx;
  padding: 0 32rpx;
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.send-btn {
  width: 80rpx;
  height: 80rpx;
  background: #4096ff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(64, 150, 255, 0.3);
}

.send-btn .icon {
  font-size: 40rpx;
  transform: rotate(0deg);
}

.send-btn.active {
  background: #1677ff;
  transform: scale(1.05);
} 