.page {
  min-height: 100vh;
  background: #f5f5f5;
}

.container {
  padding: 30rpx;
}

.article {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.article-header {
  margin-bottom: 30rpx;
}

.article-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.article-meta {
  display: flex;
  gap: 20rpx;
}

.article-time,
.article-source {
  font-size: 24rpx;
  color: #999999;
}

.article-content {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
}

.article-text {
  margin-bottom: 20rpx;
}

.article-image {
  width: 100%;
  margin: 20rpx 0;
  border-radius: 8rpx;
}

.article-video {
  width: 100%;
  margin: 20rpx 0;
  border-radius: 8rpx;
} 