.container {
  padding: 20px;
  background: #f8f9fa;
  height: 100vh;
}

.user-info {
  background: white;
  padding: 20px;
  border-radius: 12px;
  margin-bottom: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.info-item {
  display: flex;
  margin-bottom: 12px;
  padding: 8px 0;
  border-bottom: 1px solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.label {
  color: #666;
  width: 80px;
  font-size: 14px;
}

.value {
  color: #333;
  font-weight: 500;
  flex: 1;
  font-size: 14px;
}

.filter-section {
  background: white;
  padding: 15px;
  border-radius: 12px;
  margin-bottom: 20px;
  display: flex;
  justify-content: space-between;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.filter-item {
  flex: 1;
  margin: 0 8px;
}

.filter-label {
  font-size: 14px;
  color: #666;
  margin-bottom: 8px;
  display: block;
}

.filter-picker {
  width: 100%;
  height: 36px;
  line-height: 36px;
  border: 1px solid #e8e8e8;
  border-radius: 8px;
  padding: 0 12px;
  background: #fff;
  font-size: 14px;
  color: #333;
}

.recommend-section {
  background: white;
  padding: 20px;
  border-radius: 12px;
  margin-bottom: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 15px;
  color: #333;
  padding-bottom: 10px;
  border-bottom: 1px solid #f0f0f0;
}

.school-item {
  padding: 15px 0;
  border-bottom: 1px solid #f0f0f0;
}

.school-item:last-child {
  border-bottom: none;
}

.school-name {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
}

.school-info {
  margin-bottom: 10px;
  display: flex;
  flex-wrap: wrap;
}

.info-text {
  font-size: 13px;
  color: #666;
  margin-right: 15px;
  margin-bottom: 8px;
  background: #f5f5f5;
  padding: 4px 8px;
  border-radius: 4px;
}

.school-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 12px;
}

.tag {
  background: #e6f7ff;
  color: #1890ff;
  padding: 2px 8px;
  border-radius: 4px;
  font-size: 12px;
  margin-right: 8px;
  margin-bottom: 8px;
}

.major-list {
  margin-top: 12px;
  padding-top: 12px;
  border-top: 1px dashed #f0f0f0;
}

.major-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 6px 0;
}

.major-name {
  font-size: 14px;
  color: #333;
}

.major-score {
  font-size: 13px;
  color: #666;
  background: #f5f5f5;
  padding: 2px 8px;
  border-radius: 4px;
}

.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 30px;
  padding: 0 10px;
}

.back-btn, .share-btn {
  width: 48%;
  height: 44px;
  line-height: 44px;
  border-radius: 22px;
  font-size: 15px;
  font-weight: 500;
}

.back-btn {
  background: #f5f5f5;
  color: #666;
}

.share-btn {
  background: #1890ff;
  color: white;
  box-shadow: 0 4px 12px rgba(24, 144, 255, 0.2);
}

.back-btn:active, .share-btn:active {
  transform: translateY(1px);
} 